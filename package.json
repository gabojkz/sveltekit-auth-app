{
	"name": "sveltekit-auth-app",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check",
		"check:watch": "svelte-kit sync && svelte-check --watch",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"podman:up": "podman compose -f podman-compose.yaml up -d",
		"podman:down": "podman compose -f podman-compose.yaml down",
		"podman:logs": "podman compose -f podman-compose.yaml logs -f",
		"deploy": "wrangler pages deploy .svelte-kit/cloudflare",
		"cf:dev": "wrangler pages dev .svelte-kit/cloudflare"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20251225.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"drizzle-kit": "^0.31.8",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"vite": "^7.2.6",
		"wrangler": "^4.54.0"
	},
	"dependencies": {
		"@neondatabase/serverless": "^1.0.2",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"better-auth": "^1.4.9",
		"drizzle-orm": "^0.45.1",
		"postgres": "^3.4.7"
	}
}
